<launch>
  

  <arg name="frequency" default= "10"/>
  <arg name="rosbag" default="false"/>
  
  <node pkg="beginner_tutorials" name="talker" type="talker"
	 args= "$(arg frequency)" output= "screen" launch-prefix = "xterm -e">
  </node>

  <node pkg = "rosbag" type= "record" name= "record" 
  		args = "-a"  if="$(eval rosbag == true)" launch-prefix = "xterm -e">
  </node>

  <node pkg="beginner_tutorials" name="listener" type="listener"
	launch-prefix = "xterm -e" output= "screen">
  </node>

</launch>
